{
  "name": "casper",
  "version": "1.3.0",
  "description": "The default theme for [Ghost](http://github.com/tryghost/ghost/).",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass sources/scss/screen.scss -x -q --output-style compressed > assets/css/screen.css",
    "uglify": "uglifyjs sources/js/libs.js sources/js/index.js --compress --mangle --screw-ie8 > assets/js/index.min.js",
    "build": "npm run scss & npm run uglify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blade254353074/casper-custom.git"
  },
  "keywords": [
    "casper",
    "custom",
    "ghost",
    "themes"
  ],
  "author": "SebastianBlade",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blade254353074/casper-custom/issues"
  },
  "homepage": "https://github.com/blade254353074/casper-custom#readme",
  "dependencies": {
    "node-sass": "^3.8.0",
    "uglifyjs": "^2.4.10"
  }
}
